<configuration>
  <appender name="conomy.transactions-file" class="ch.qos.logback.core.FileAppender">
    <file>${cubeengine.log}/conomy-transactions.log</file>
    <encoder>
      <pattern>%date{yyyy-MM-dd HH:mm:ss} %msg%n</pattern>
    </encoder>
  </appender>
  <logger name="cubeengine.conomy.transactions" level="debug" additivity="false">
    <appender-ref ref="conomy.transactions-file" />
  </logger>
</configuration>